<?xml version="1.0" encoding="utf-8"?>
<com.altoros.study.BiDirectionScrolling.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                                         android:layout_width="fill_parent"
                                                         android:layout_height="fill_parent">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <com.altoros.study.BiDirectionScrolling.CustomHorizontalScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="150dp"
                           android:layout_height="150dp"
                           android:background="@color/blue"/>
                <ImageView android:layout_width="150dp"
                           android:layout_height="150dp"
                           android:background="@color/common_blue"/>
                <ImageView android:layout_width="150dp"
                           android:layout_height="150dp"
                           android:background="@color/brown"/>
                <ImageView android:layout_width="150dp"
                           android:layout_height="150dp"
                           android:background="@color/red"/>
            </LinearLayout>
        </com.altoros.study.BiDirectionScrolling.CustomHorizontalScrollView>

        <com.altoros.study.BiDirectionScrolling.CustomHorizontalScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="120dp"
                >
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="150dp"
                           android:layout_height="150dp"
                           android:background="@color/blue"/>
                <ImageView android:layout_width="150dp"
                           android:layout_height="150dp"
                           android:background="@color/common_blue"/>
                <ImageView android:layout_width="150dp"
                           android:layout_height="150dp"
                           android:background="@color/brown"/>
                <ImageView android:layout_width="150dp"
                           android:layout_height="150dp"
                           android:background="@color/red"/>
            </LinearLayout>
        </com.altoros.study.BiDirectionScrolling.CustomHorizontalScrollView>

        <com.altoros.study.BiDirectionScrolling.CustomHorizontalScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="120dp"
                >
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="150dp"
                           android:layout_height="150dp"
                           android:background="@color/blue"/>
                <ImageView android:layout_width="150dp"
                           android:layout_height="150dp"
                           android:background="@color/common_blue"/>
                <ImageView android:layout_width="150dp"
                           android:layout_height="150dp"
                           android:background="@color/brown"/>
                <ImageView android:layout_width="150dp"
                           android:layout_height="100dp"
                           android:background="@color/red"/>
            </LinearLayout>
        </com.altoros.study.BiDirectionScrolling.CustomHorizontalScrollView>

    </LinearLayout>
</com.altoros.study.BiDirectionScrolling.CustomScrollView>